{
	"name": "bunestro",
	"description": "Bunestro - Astro v5 template with Tailwind CSS and Bun",
	"author": "Ard Astroid <ardastroid@gmail.com>",
	"private": true,
	"type": "module",
	"imports": {
		"#*": "./src/*",
		"#ui/*": "./src/components/ui/*.tsx",
		"#lib/*": "./src/lib/*.ts",
		"#layouts/*": "./src/layouts/*.astro",
		"#utils/*": "./src/components/utils/*",
		"#utils/react-only/*": "./src/components/utils/react-only/*.tsx",
		"#hooks/*": "./src/hooks/*.ts"
	},
	"version": "0.0.3",
	"scripts": {
		"dev": "bunx --bun astro dev",
		"build": "bunx --bun astro build",
		"preview": "bunx --bun astro preview",
		"astro": "bunx --bun astro",
		"check": "bunx --bun astro check",
		"check-types": "bunx --bun tsc",
		"sync": "bunx --bun astro sync",
		"format": "bunx --bun prettier --write ."
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/react": "^4.2.4",
		"@astrojs/sitemap": "^3.3.0",
		"@astrojs/tailwind": "6.0.2",
		"@fontsource-variable/montserrat": "^5.2.5",
		"@radix-ui/react-dialog": "^1.1.7",
		"@radix-ui/react-dropdown-menu": "^2.1.7",
		"@radix-ui/react-label": "^2.1.3",
		"@radix-ui/react-radio-group": "^1.2.4",
		"@radix-ui/react-slot": "^1.2.0",
		"@radix-ui/react-toast": "^1.2.7",
		"@radix-ui/react-tooltip": "^1.2.0",
		"@tailwindcss/vite": "^4.1.4",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"astro": "^5.7.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.487.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.4",
		"tailwindcss-animate": "^1.0.7",
		"vaul": "^1.1.2"
	},
	"devDependencies": {
		"@types/bun": "^1.2.9",
		"prettier": "3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss-motion": "^1.1.0",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">= 22.9.0",
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.2.9",
	"bun": {
		"runtime": true
	}
}
